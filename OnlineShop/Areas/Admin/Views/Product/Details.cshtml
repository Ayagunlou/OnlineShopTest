@model OnlineShop.Models.Products
@{
    ViewData["Title"] = "Details";
}

<br/>

<h2 class="text-info">Product Details</h2>

<form asp-action="" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="Id">
                    <input asp-for="Name" class="form-control" readonly="readonly">
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row mb-3 mt-3">
                <div class="col-4">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Price" class="form-control" readonly="readonly">
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group row mb-3 mt-3">
                <div class="col-4">
                    <label asp-for="ProductColor"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ProductColor" class="form-control" readonly="readonly">
                </div>
                <span asp-validation-for="ProductColor" class="text-danger"></span>
            </div>
            <div class="form-group row mb-3 mt-3">
                <div class="col-4">
                    <label asp-for="ProductTypeId"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ProductTypeId" type="hidden">
                    <input class="form-control" readonly="readonly" value="@Model.ProductTypes.ProductType">
                </div>
                <span asp-validation-for="ProductTypeId" class="text-danger"></span>
            </div>
            <div class="form-group row mb-3 mt-3">
                <div class="col-4">
                    <label asp-for="SpecialTagId"></label>
                </div>
                <div class="col-8">
                    <input asp-for="SpecialTagId" type="hidden">
                    <input class="form-control" readonly="readonly" value="@Model.SpecialTag.Name">
                </div>
                <span asp-validation-for="SpecialTagId" class="text-danger"></span>
            </div>
            <div class="form-group row mb-3 mt-3">
                <div class="col-4">
                    <label asp-for="IsAvailable"></label>
                </div>
                <div class="col-8">
                    <input asp-for="IsAvailable" class="" type="checkbox" readonly="readonly">
                </div>
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a type="button" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Edit</a>
                <a asp-action="Index" class="btn btn-outline-success">Back to list</a>
            </div>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
            <img src="/@Model.Image" width="100%" style="border-radius:5px;border:1px solid #efefef">
        </div>

    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial");
    }
}