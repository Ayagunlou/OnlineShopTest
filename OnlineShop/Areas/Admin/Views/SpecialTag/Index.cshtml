@using OnlineShop.Models;
@model IEnumerable<SpecialTag>
@{
    ViewData["Title"] = "Index";
}
<br><br/>
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Special Tag List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-action="Create" class="btn btn-outline-light"><i class="fa-solid fa-plus"></i>&nbsp; New Tag Name</a>
    </div>
</div>
<br/>
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(expression:c=>c.Name)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
        <tr class="text-light">
            <td>@item.Name</td>
            <td>
                <partial name="_TagPageButtonPartial" model="@item.Id">
            </td>
        </tr> 
        }
    </table>
</div>

@section scripts{
            <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
            <script type="text/javascript">
                $(function(){
                    var save = "@TempData["save"]"
                        if(save!=''){
                        alertify.success(save);
                    }
                    var edit = '@TempData["edit"]'
                    if(edit!='') {
                        alertify.success(edit);
                    }
                    var del = '@TempData["delete"]'
                    if (del!='') {
                        alertify.error(del);
                    }

                })
            </script>

}