@model OnlineShop.Models.ProductTypes
@{
    ViewData["Title"] = "Details";
}

<br/>

<h2 class="text-info">Product Type Details</h2>

<form asp-action="Details" method="post">
    <div class="p-4 rounde border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductType"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProductType" class="form-control" readonly="readonly">
            </div>
            <span asp-validation-for="ProductType" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Edit</a>
            <a asp-action="Index" class="btn btn-outline-success">Back to list</a>
            @*<input type="submit" class="btn btn-outline-success" value="Back to list">*@
        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial");
    }
}
