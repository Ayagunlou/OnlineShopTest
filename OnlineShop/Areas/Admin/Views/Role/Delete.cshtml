@{
    ViewData["Title"] = "Delete";
}

<br/>

<h2 class="text-info">Edit Role User</h2>

<form asp-action="Delete" method="post" enctype="multipart/form-data" id="role-form">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <h3>Do you want to delete</h3>
        <div class="form-group row">
            <div class="col-2">
                <label>Role Name</label>
            </div>
            <input type="hidden" value="@ViewBag.id" name="id"/>
            <div class="col-5">
                <input id="name" readonly="readonly" name="name" value="@ViewBag.name" class="form-control" required="required">
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-outline-danger" value="Delete">
            <a asp-action="Index" class="btn btn-outline-success">Back to list</a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial");
    }
                <script>
                    $(document).ready(function () {
                        $("#user-form").validate({
                    rules: {
                      UserName : {
                        required: true,
                             },
                      PasswordHash : {
                        required: true,
                             }
                            },
                            messages: {
                                UserName: "Enter your email",
                                PasswordHash:"Enter your password"
                            }

                  });
                    });
                </script>

}
