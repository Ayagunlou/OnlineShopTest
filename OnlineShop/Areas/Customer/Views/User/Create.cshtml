@model OnlineShop.Models.ApplicationUser
@{
    ViewData["Title"] = "Add New User";
}

<br/>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>

<h2 class="text-info">Add New User</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" id="user-form">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <h3>@ViewBag.message</h3>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserName">Email</label>
            </div>
            <div class="col-5">
                <input asp-for="UserName" class="form-control" required="required">
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group row mb-3 mt-3">
            <div class="col-2">
                <label asp-for="PasswordHash">Password</label>
            </div>
            <div class="col-5">
                <input asp-for="PasswordHash" class="form-control" type="password" required="required">
            </div>
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>
        <div class="form-group row mb-3 mt-3">
            <div class="col-2">
                <label asp-for="FristName"></label>
            </div>
            <div class="col-5">
                <input asp-for="FristName" class="form-control">
            </div>
            <span asp-validation-for="FristName" class="text-danger"></span>
        </div>
        <div class="form-group row mb-3 mt-3">
            <div class="col-2">
                <label asp-for="LastName"></label>
            </div>
            <div class="col-5">
                <input asp-for="LastName" class="form-control ">
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group row mb-3 mt-3">
            <div class="col-2">
                <label asp-for="PhoneNumber"></label>
            </div>
            <div class="col-5">
                <input asp-for="PhoneNumber" class="form-control ">
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group row mb-3 mt-3">
            <div class="col-2">
                <label asp-for="Address"></label>
            </div>
            <div class="col-5">
                <input asp-for="Address" class="form-control ">
            </div>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-outline-primary" value="Save">
            <a asp-action="Index" class="btn btn-outline-success">Back to list</a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial");
